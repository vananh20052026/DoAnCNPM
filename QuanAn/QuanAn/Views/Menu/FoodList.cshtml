@model QuanAn.Models.ViewModel.MenuProductVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<meta name="viewport" content="initial-scale=0.1">


<link href="~/Content/css/Menu.css" rel="stylesheet" />
<link href="~/Content/css/sanPham.css" rel="stylesheet" />
<style>
    .item-parent {
        max-width: 1500px;
        display: block;
        margin: auto;
    }

    .products-list {
        scrollbar-width: thin;
        overflow: auto;
        display: inline-block;
        max-height: 500px;
        white-space: normal;
    }
</style>
<section class="home-container">
    <div id="carouselbanner" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Content/img/HomeImg/Hbanner.png" alt="First slide" />
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/img/HomeImg/hbn.jpg" alt="Second slide" />
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselbanner" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselbanner" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <section class="search-content">
        @using (Html.BeginForm("Menu", "Menu", FormMethod.Get))
        {
            @Html.TextBoxFor(m => m.SearchTerm, new
       {
           @class = "search-input",
           placeholder = "Nhập tên, mô tả hoặc loại sản phẩm"
            })

            <button type="submit" class="search-button">Tìm kiếm</button>
        }
    </section>

    @{
        var categoryName = Request.QueryString["categoryName"];
        int categoryCount = Convert.ToInt32(Request.QueryString["categoryCount"]);
        <div class="item-parent">
            <div class="item-header">
                <img src="~/Content/img/HomeImg/shoe.png" />
                <h2>@categoryName</h2>
            </div>
            <section class="container-fluid products-list">
                @foreach (var food in Model.itemFoods)
                {
                    if (int.Parse(food.CateID) == categoryCount)
                    {
                        <div class="item-container">
                            <a href="@Url.Action("FoodInfo", "Menu", new { id = food.FoodID })">
                                <img class="item-img" src="@food.FoodImage" />
                                <div class="card-body">
                                    <p class="prodPrice text-truncate">
                                        @food.UnitPrice
                                    </p>

                                    <p class="prodName text-truncate">
                                        @food.FoodName
                                    </p>

                                    <p class="prodSale text-truncate">
                                        Đã bán: &nbsp; @food.C_Order_Detail_.Count
                                    </p>
                                </div>
                            </a>
                        </div>
                    }
                }
            </section>
        </div>

    }

    <br />
    <br />
    <hr />
 
</section>




