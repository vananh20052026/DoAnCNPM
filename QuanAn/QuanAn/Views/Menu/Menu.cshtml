    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .logo-container img {
                height: 100px;
            }

        .search-bar {
            display: grid;
            grid-template-columns: 80px 300px 80px 50px 80px 50px;
            border: 1px solid black;
        }

            .search-bar input {
                border: none;
                padding: 5px;
                border-left: 1px solid black;
                grid-column: span 1;
            }

            .search-bar button {
                border-left: 1px solid black;
                border: none;
                cursor: pointer;
                padding: 5px;
            }

        .menu-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .menu-card {
            display: flex;
            flex-direction: column;
            width: 350px;
            border: 1px solid #ccc;
            padding: 10px;
            margin: 10px;
            min-height: 500px; /* đảm bảo đủ cao để ADD ORDER nằm dưới */
            box-sizing: border-box;
            background-color: white;
        }

        .item-header img {
            width: 100px;
            height: 100px;
            object-fit: cover;
        }

        .menu-title {
            font-weight: bold;
            margin-top: 8px;
        }

        .menu-sub {
            font-size: 0.9em;
            color: #888;
        }

        .menu-price {
            color: green;
            font-weight: bold;
        }

        .menu-desc {
            margin-top: 8px;
            font-size: 0.9em;
        }

        .quantity-controls {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 10px;
        }



            .quantity-controls input {
                width: 30px;
                text-align: center;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

        .add-order-btn {
            margin-top: auto;
            height: 35px;
            background-color: #6fbf4b;
            color: white;
            font-weight: bold;
            border: none;
            cursor: pointer;
        }

        .logo-container span {
            font-size: 24px;
            font-weight: bold;
            color: #000;
        }

        .sort-btn {
            background-color: #4285f4; /* Màu xanh dương */
            color: white;
            border: 1px solid #4285f4;
        }

        .add-btn {
            background-color: green;
            color: white;
            border: 1px solid green;
        }

        .plus-btn {
            background-color: green;
            color: white;
            border: 1px solid green;
        }

        .arrow-btn {
            background-color: #4285f4; /* Màu xanh dương */
            color: white;
            border: 1px solid #4285f4;
        }

        .search-bar div {
            background-color: grey;
            color: white;
        }

        .ingredient-row {
            display: flex;
            justify-content: space-between;
            padding: 2px 0;
            font-size: 14px;
        }

        .order-content {
            flex-grow: 1;
        }

        .item-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 30px;
            margin-bottom: 10px;
        }



        .item-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .divider {
            border-top: 1px solid #ccc;
            margin: 10px 0;
        }

        .btnplus {
            background-color: #6fbf4b;
            padding: 5px 10px;
            color: white;
            border: none;
            border-radius: 4px;
        }

        .btnSubtract {
            background-color: #888;
            padding: 5px 10px;
            color: white;
            border: none;
            border-radius: 4px;
        }
    </style>
</head>
