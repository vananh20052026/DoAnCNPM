@model QuanAn.Models.ViewModel.LoginVM


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');
.form-main {
    background-color: #e1e1e4;
    display: grid;
    min-height: 800px;
    place-items: center;
    font-family: "Roboto", serif;
    font-weight: 300;
    font-style: normal;
}

form {
    display: block;
    margin-left: auto;
    margin-right: auto;
    background-color: black;
    color: white;
    padding: 10px;
    border-radius: 10px;
    max-width: fit-content;
}

.form-header * {
    max-width: unset;
    font-family: "Roboto", serif;
    font-weight: 400;
    font-style: italic
}

.form-group * {
    max-width: unset;
}

.form-group {
    display: inline-block;
}

hr {
    background-color: white;
    height: 3px;
    border-radius: 5px;
}

.side-group {
    display: inline-block;
    vertical-align: top;
}

.form-horirontal {
    display: inline-block
}

.side-group {
    display: inline-block;
}

.inner-side {
    display: block;
}

    .inner-side img {
        display: block;
        max-width: 200px;
        margin-left: auto;
        margin-right: auto;
    }

    .inner-side div {
        display: block;
    }
.btn.btn-info.accountbtn {
    min-width: 90%;
    display: block;
    margin: auto;
}

</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

<link href="~/Content/css/login-register.css" rel="stylesheet" />

<!DOCTYPE html>
<style>
    .form-group {
        display: inline-block;
        min-width: 100%;
    }

    input {
        overflow: visible;
        min-width: 100%;
    }
</style>
<div class="form-main">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horirontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="group">
                <div class="form-header">
                    <h2 class="col-md-6 form-text"> Đăng Nhập Tài Khoản </h2>
                </div>
                <div class="inner-top">
                    @*Tên đăng nhập*@
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Username, new { htmlAttibutes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="inner-bottom">
                    @*Mật khẩu*@
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.PasswordFor(model => model.Password, new { htmlAttibutes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <input style="margin: auto; display:block;" type="submit" value="Đăng Nhập" class="btn btn-info accountbtn" />
            </div>
        </div>
        <div class="side-group">
            <div class="inner-side">
                <img src="~/Content/img/logo-white.png" />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        <br />
                        <p>Bạn chưa có tài khoản ? <a href="@Url.Action("Register", "Account", null)" />Đăng Ký</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

